{
  "extends": [
    "config:recommended"
  ],
  "docker-compose": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "docker image updates",
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+(\\.\\d+)?$/",
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ]
}
